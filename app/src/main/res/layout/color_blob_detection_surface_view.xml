<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical">

        <org.opencv.android.JavaCameraView
            android:id="@+id/color_blob_detection_activity_surface_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="500dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="375dp" />

        <ImageView
            android:id="@+id/filter_image_view1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_alignStart="@+id/filter_image_view2"
            android:layout_alignTop="@+id/color_blob_detection_activity_surface_view"/>

        <ImageView
            android:id="@+id/filter_image_view2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/color_blob_detection_activity_surface_view"
            android:layout_below="@+id/filter_image_view1" />

        <ImageView
            android:id="@+id/filter_image_view3"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/color_blob_detection_activity_surface_view"
            android:layout_below="@+id/filter_image_view2" />

        <ImageView
            android:id="@+id/filter_image_view4"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/filter_image_view1"
            android:layout_toEndOf="@+id/filter_image_view1"/>

        <ImageView
            android:id="@+id/filter_image_view5"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/filter_image_view2"
            android:layout_alignTop="@+id/filter_image_view2" />

        <ImageView
            android:id="@+id/filter_image_view6"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/filter_image_view3"
            android:layout_alignTop="@+id/filter_image_view3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/countText"
            android:gravity="right"
            android:layout_alignParentBottom="true" />
</RelativeLayout>
